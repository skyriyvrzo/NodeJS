<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs', {title: "แบบฟอร์มบันทึกข้อมูล"}) %>
    <body>
    <%- include('navbar.ejs') %>
        <div class="container">
            <div class="row my-3">
                <div class="col-md-8 mb-4">
                    <form class="form-horizontal" method="post" action="/insert">
                        <div class="form-group">
                          <label class="control-label col-sm-2">ชื่อสินค้า</label>
                          <div class="col-sm-10">
                            <input type="text" class="form-control" name="name">
                          </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ราคา</label>
                            <div class="col-sm-10">
                              <input type="text" class="form-control" name="price">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">ภาพสินค้า</label>
                            <div class="col-sm-10">
                              <input type="file" class="form-control" name="image">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-2">รายละเอียด</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" cols="30" rows="4" name="description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                          <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">บันทึก</button>
                          </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
