    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .search-form {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .search-form input {
            margin-right: 10px;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: scale(1.03);
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
        }

        .card-body {
            text-align: center;
        }

        .btn-search {
            background-color: #007bff;
            color: white;
        }

        .btn-search:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <%- include('navbar.ejs') %>

        <div class="container mt-4">
